<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="ActiveText" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/font_weight_semibold
        </item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_active</item>
        <item name="android:colorPrimary">@color/accent</item>
    </style>

    <style name="TextStyle.DangerActive" parent="ActiveText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextStyle.Logo" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textFontWeight" tools:targetApi="p">@integer/font_weight_bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat.Body1">

    </style>

    <style name="TextStyle.InputFieldDescription" parent="TextAppearance.AppCompat.Menu"></style>

    <style name="TextStyle.FilledLabel" parent="TextAppearance.AppCompat.Menu">
        <item name="android:background">@drawable/background_text_label</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyle.Money" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Message" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">center</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/font_weight_medium</item>
    </style>

    <style name="TextStyle.Description" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/font_weight_semibold
        </item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="TextStyle.Semibold" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="ToolbarTransparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
    </style>
</resources>