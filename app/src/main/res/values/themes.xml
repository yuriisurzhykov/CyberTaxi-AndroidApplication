<resources>

    <style name="Theme.Splash" parent="Theme.Mobile">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:navigationIcon">@drawable/ic_side_menu</item>
    </style>

    <style name="Theme.Mobile" parent="Theme.Mobile.Base" />

    <style name="Theme.Mobile.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryInverse">@color/grayDark</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/onPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/onSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/commissioner</item>
        <item name="android:fontFamily">@font/commissioner</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="codeInputBackground">@color/white</item>
    </style>
</resources>