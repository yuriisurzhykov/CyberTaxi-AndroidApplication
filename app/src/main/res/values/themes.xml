<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Splash" parent="Theme.Mobile">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:navigationIcon">@drawable/ic_side_menu</item>
    </style>

    <style name="Theme.Mobile" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="fontFamily">@font/commissioner</item>
        <item name="android:fontFamily">@font/commissioner</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="buttonStyle">@style/Button</item>
    </style>
</resources>